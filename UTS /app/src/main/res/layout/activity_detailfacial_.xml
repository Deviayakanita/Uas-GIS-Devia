<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".Detailfacial_Activity">

    <ImageView
        android:id="@+id/image_facialskin"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/back"
        android:elevation="10dp"
        android:padding="20dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:hint="Nama Tempat Facial"
                android:textColor="@color/colorblack"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nama"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/lok"
                android:ems="70"
                android:hint="Alamat"
                android:textColor="@color/colorblack"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/tv_notlpn"
                android:textColor="@color/colorblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_alamat"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/tlpn"
                android:ems="70"
                android:hint="No Telephone"
                android:paddingBottom="5dp" />



            <Button
                android:id="@+id/btn_tlpn"
                android:textColor="@color/colorblack"
                android:background="@color/colorwhite"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="150dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_notlpn"
                android:text="CALL" />
            <Button
                android:id="@+id/btn_home"
                android:textColor="@color/colorblack"
                android:background="@color/colorwhite"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_tlpn"
                android:text="HOME" />



        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>